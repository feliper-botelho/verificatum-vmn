###########################################################################
####################### Execute key generation. ###########################
###########################################################################

# Make sure we log everything.
{

. ./checkvmn

. ./conf

phasestart "Decrypting ciphertexts"

widthcom WIDTHCOM $FORCED_WIDTH

for i in `seq 1 $NO_MIXSERVERS`
do
    getssh SSH $i
    getprefix PREFIX $i
    getname NAME $i
    $TERM -sl 1500 -T "$NAME (decrypt)" -e "$SSH '''$CHECK_ENV && cd ${PREFIX}/${NAME} && vmn -decrypt -e $SILENT $WIDTHCOM ciphertexts plaintexts_orig && ! ( test -f plaintexts_orig ) || vmnc -plain -outi $INTER $WIDTHCOM plaintexts_orig plaintexts; printf \$? > exitcode; sleep $SLEEPTIME'''"&

done

# Wait until all servers have completed.
wait

checkallexits

phaseend

# Make sure we log everything.
} | tee -a demo_log
